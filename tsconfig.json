{
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./vendor/node_modules",
    "paths": {
      "*": ["@types/*", "*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx"
  ],
  "compileOnSave": false
}
